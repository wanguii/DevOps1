<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:gravity="center_horizontal"
    android:paddingRight="24dp"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_movie_banner"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="64dp"/>

    <!-- EditText for movie title -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="-35dp"
        android:layout_marginRight="-35dp"
        android:background="@drawable/fab_background"
        android:contentDescription="This is when you want to change your profile picture."
        android:src="@drawable/ic_add_fab_icon" />

    <EditText
        android:id="@+id/edit_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:paddingLeft="12dp"
        android:ems="10"
        android:hint="Enter title"
        android:background="@drawable/border_edit_text"
        android:inputType="text"
        android:text=""
        android:visibility="visible" />

    <!-- Edit text for movie description-->
    <EditText
        android:id="@+id/edit_movie_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/border_edit_text"
        android:inputType="text"
        android:hint="Enter description"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingLeft="12dp"
        android:text="" />
</LinearLayout>